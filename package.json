{
  "name": "swift-typing",
  "private": true,
  "version": "2.5.1",
  "author": "SW-YONTO (Suraj Maurya)",
  "type": "module",
  "description": "A comprehensive offline typing tutor desktop application",
  "homepage": "./",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint .",
    "electron": "electron .",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && cross-env NODE_ENV=development electron .\"",
    "prebuild:icon": "node -e \"const fs = require('fs'); const path = require('path'); if (!fs.existsSync('build')) fs.mkdirSync('build'); fs.copyFileSync('public/favicon_io/clipboard256.ico', 'build/icon.ico'); fs.copyFileSync('public/favicon_io/icon.png', 'build/icon.png');\"",
    "pack": "npm run prebuild:icon && npm run build && electron-builder --dir",
    "dist": "npm run prebuild:icon && npm run build && electron-builder"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.11",
    "chart.js": "^4.5.0",
    "lucide-react": "^0.525.0",
    "prop-types": "^15.8.1",
    "react": "^19.1.0",
    "react-chartjs-2": "^5.3.0",
    "react-dom": "^19.1.0",
    "react-icons": "^5.5.0",
    "react-router-dom": "^7.6.3",
    "react-window": "^2.2.4",
    "recharts": "^3.0.2",
    "tailwindcss": "^4.1.11"
  },
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.5.2",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^39.0.0",
    "electron-builder": "^26.0.12",
    "eslint": "^9.29.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.2.0",
    "png-to-ico": "^3.0.1",
    "to-ico": "^1.1.5",
    "vite": "^7.0.0",
    "vite-plugin-pwa": "^1.0.1",
    "wait-on": "^8.0.3",
    "workbox-window": "^7.3.0"
  },
  "main": "electron/main.cjs",
  "build": {
    "appId": "com.swifttyping.app",
    "productName": "Swift Typing",
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "extraResources": [
      {
        "from": "public/favicon_io/android-chrome-512x512.png",
        "to": "icon.png"
      },
      {
        "from": "public/icon.ico",
        "to": "icon.ico"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico",
      "requestedExecutionLevel": "asInvoker",
      "signAndEditExecutable": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Swift Typing",
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico",
      "installerHeaderIcon": "build/icon.ico",
      "deleteAppDataOnUninstall": false
    }
  }
}
